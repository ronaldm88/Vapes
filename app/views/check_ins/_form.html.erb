<div class="row">
  <div class="col-md-6">
  <%= resource_error_messages!(check_in) %>

  <%= form_for check_in, url: user_check_ins_path do |f| %>
    <div class="container">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :beer_id %>
          <%= f.collection_select :beer_id, Beer.all, :id, :name, {:prompt => 'Select Beer or Add a New Beer On the Right ->'}, class:"form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :rating %>
          <%= f.select :rating, options_for_select(0..10), {:prompt => 'Select Rating'}, class:"form-control"%><br>
        </div>
        <div class="form-group">
          <%= f.label :comment %>
          <%= f.text_area :comment, class:"form-control", placeholder:"Add comment here..." %><br>
        </div>

        <%= f.submit "Add Check In", class:"btn btn-primary" %>
      </div>

      <div class="col-md-4">
        <%= resource_error_messages!(check_in.beer) %>
        
        <div id="add-beer">
          <h3>Add a new beer:</h3>
          <%= f.fields_for :beer_attributes do |beer_form| %>
            <div class="form-group">
              <%= beer_form.label :name %>
              <%= beer_form.text_field :name, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= beer_form.label :style %>
              <%= beer_form.text_field :style, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= beer_form.label :brewery %>
              <%= beer_form.text_field :brewery, class:"form-control" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
