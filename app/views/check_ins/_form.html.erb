<div class="col-md-4">
  <% if check_in.errors.any? %>
    <div class="check_in_error_messages">
      <h3><%= pluralize(check_in.errors.count, "error") %> stopped us from adding this to the database.</h3>

      <ul>
        <% check_in.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for check_in, url: user_check_ins_path do |f| %>
    <div class="container">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :beer_id %>
          <%= f.collection_select :beer_id, Beer.all, :id, :name, {:prompt => 'Select Beer'}, class:"form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :rating %>
          <%= f.select :rating, options_for_select(0..10), {:prompt => 'Select Rating'}, class:"form-control"%><br>
        </div>
        <div class="form-group">
          <%= f.label :comment %>
          <%= f.text_area :comment, class:"form-control", placeholder:"Add comment here..." %><br>
        </div>

        <%= f.submit "Add Check In", class:"btn btn-primary" %>
      </div>

      <div class="col-md-3 col-md-offset-2">
        <p>Add a new beer:</p>
        <%= f.fields_for :beer_attributes do |beer_form| %>
          <div class="form-group">
            <%= beer_form.label :name %>
            <%= beer_form.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= beer_form.label :style %>
            <%= beer_form.text_field :style, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= beer_form.label :brewery %>
            <%= beer_form.text_field :brewery, class:"form-control" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
