<div class="col-md-4">
  <% if beer.errors.any? %>
    <div class="alert alert-error alert-danger">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <p><%= pluralize(beer.errors.count, "error") %> stopped us from adding this to the database.</p>

      <ul>
        <% beer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for beer do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %><br>
    </div>
    <div class="form-group">
      <%= f.label :style %>
      <%= f.text_field :style, class:"form-control" %><br>
    </div>
    <div class="form-group">
      <%= f.label :brewery %>
      <%= f.text_field :brewery, class:"form-control" %><br>
    </div>

    <%= f.submit "Create Beer", class:"btn btn-primary" %>
  <% end %>
</div>
