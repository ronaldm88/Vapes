<div class="col-md-4">
  <%= form_for beer do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %><br>
    </div>
    <div class="form-group">
      <%= f.label :style %>
      <%= f.text_field :style, class:"form-control" %><br>
    </div>
    <div class="form-group">
      <%= f.label :brewery %>
      <%= f.text_field :brewery, class:"form-control" %><br>
    </div>

    <%= f.submit "Create Beer", class:"btn btn-primary" %>
  <% end %>
</div>
